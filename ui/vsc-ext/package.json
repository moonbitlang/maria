{
  "name": "moonbit-agent",
  "displayName": "MoonBit Agent",
  "description": "Vscode extension for MoonBit Agent",
  "publisher": "moonbit",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "AI",
    "Visualization"
  ],
  "activationEvents": [
    "onView:moonbit-agent-activitybar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "moonbit-agent-activitybar",
          "title": "MoonBit Agent",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "moonbit-agent-activitybar": [
        {
          "type": "webview",
          "id": "moonbit-agent.view",
          "name": "MoonBit Agent",
          "icon": "$(robot)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "moonbit-agent.allTasksView",
          "group": "navigation@1",
          "when": "view == moonbit-agent.view"
        },
        {
          "command": "moonbit-agent.taskView",
          "group": "navigation@2",
          "when": "view == moonbit-agent.view"
        }
      ]
    },
    "commands": [
      {
        "command": "moonbit-agent.allTasksView",
        "title": "All Tasks",
        "icon": "$(list-flat)"
      },
      {
        "command": "moonbit-agent.taskView",
        "title": "Task",
        "icon": "$(comment-discussion)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:webview": "cd ../web && pnpm build --mode vscode --watch",
    "build:webview": "cd ../web && pnpm build --mode vscode",
    "package": "pnpm run check-types && pnpm run lint && pnpm run build:webview && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "dependencies": {
    "comlink": "^4.4.2"
  }
}
