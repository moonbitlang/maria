{
  "name": "native",
  "productName": "Maria",
  "version": "1.0.0",
  "description": "Electron app for Maria",
  "main": "dist/main/main.js",
  "scripts": {
    "watch:main": "cd ./src/main && node ./build.js --watch",
    "build:main": "cd ./src/main && node ./build.js",
    "watch:preload": "cd ./src/preload && node ./build.js --watch",
    "build:preload": "cd ./src/preload && node ./build.js",
    "watch:renderer": "vite -c vite.renderer.config.ts",
    "build:renderer": "vite -c vite.renderer.config.ts build",
    "watch": "run-p watch:*",
    "build": "run-p build:*",
    "dev": "MARIA_DEV=true electron .",
    "preview": "pnpm build && cd ./dist && electron .",
    "package": "node ./script/package.js",
    "check": "tsc -b -noEmit",
    "publish": "",
    "lint": ""
  },
  "keywords": [],
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/wicg-file-system-access": "^2023.10.7",
    "@vitejs/plugin-react": "^5.1.0",
    "electron": "^39.2.4",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@maria/core": "workspace:^",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.9.5"
  }
}
